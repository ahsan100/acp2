html
    box-sizing: border-box

*, *:before, *:after
    box-sizing: inherit

body
    background #FFF
    padding-top 70px
    overflow-y scroll
    font-size 1.5em

header
    color #FFF
    background blue
    fixed top left
    height 70px
    width 100%
    z-index: z.header
    shadow-level(2)
    clearfix()
    h1
        margin 0
        font-size 1.6em
        float left
    .login-buttons-dropdown-align-
        float right
        a
            color #FFF
            text-decoration none

#wrap {
  min-height: 100%;
}


footer
    height 140px
    margin-top 40px
    position relative
    width 80%
    margin-left auto
    margin-right auto

br
    border-bottom 1px dark-blue
    display block

p
    color #333

.page-title
    text-transform uppercase
    text-align center
    margin-bottom 30px

.billboard
    background dark-blue
    color #FFF
    font-size 2em
    text-align center
    padding 60px
    h2
        margin 0

.main-layout
    lost-center 90%
    margin-top 20px
    +above($med)
        lost-center 90%
    +above($large)
        lost-center 80%
        margin-top 40px
    .fa
      font-size 1.7em
      display inline-block
      margin-right 10px
    h4
      color dark-blue

.primary
    font-size 1.5em
    padding-top 10px
    padding-bottom 26px



.new-recipe
    margin-bottom 20px

.new-recipe-container
    position relative
    background light-grey
    padding 20px
    margin-bottom 20px
    margin-top 10px
    shadow-level(2)
    .fa-close
        position absolute
        top 0
        right 0
        padding 20px


.btn, button
    display inline-block
    cursor pointer
    background blue
    color #FFF
    text-decoration none
    text-transform uppercase
    padding 5px 15px
    border solid 3px blue
    border-radius 2px
    font-weight 800
    shadow-level(1)
    trans()
    &:hover
        background @background - 20
        border-color @background
        shadow-level(2)
    &.btn-primary
        background teal
        border-color teal
        color dark-blue
        &:hover
            background @background - 40
            border-color @background
    &.btn-deny
        background red
        border solid 3px @background
        &:hover
            background @background - 20
            border-color @background
    &.btn-text
        color blue
        background transparent
        border solid 2px blue
        shadow-level(0)
        &:hover
            background teal
            border-color @background
            shadow-level(1)
    &.btn-text-dark
        color #FFF
        background transparent
        border solid 2px #FFF
        shadow-level(0)
        &:hover
            background #FFF
            color dark-blue
            border-color @background
            shadow-level(1)
    &.btn-confirmation
        color black
        background green
        border solid 2px @background
        &:hover
            background @background - 20
            border-color dark-blue
    &.btn-cancel
        color #FFF
        background transparent
        border solid 2px #FFF
        opacity 0.4
        shadow-level(-1)
        &:hover
            background red
            color #FFF
            opacity 1
            shadow-level(2)
            border-color @background

input, select, textarea
    color blue
    background #FFF
    border solid 2px light-grey
    border-radius 2px
    font-weight 800
    width 100%
    padding 6px 10px
    margin-bottom 10px
    &.static-input
        border none
        background transparent

.list-group
    list-style none
    padding 0

.panel-body
    .form-group
        lost-column 1/2

.autoform-remove-item.btn
    background light-grey
    box-shadow none
    border none
    border-radius 50%
    font-size 1em
    height: 25px
    width: 25px
    text-align: center
    display: block
    padding: 0

.autoform-add-item.btn
    border-radius 0
    border none
    box-shadow none
    background light-grey


.autoform-remove-item-wrap
    vertical-align middle

.help
    float left

.main-nav
    width 80%
    margin-left auto
    margin-right auto
    a
        color #FFF
        text-decoration none
        margin 20px 20px
        display block


.recipe
    background light-grey
    padding 0 20px 20px
    margin-bottom 20px
    position relative
    z-index 1
    shadow-level(1)
    trans()
    .remove-from-menu
        display none
    &.in-menu
        background teal
        color #FFF
        h3
            border-bottom: rgba(255,255,255, 0.6) solid 3px
        .add-to-menu
            display none
        .remove-from-menu
            display block
    h3
        font-size: 2em;
        opacity: 0.8;
        border-bottom: rgba(0,0,0, 0.3) solid 1px
        padding-top 10px
        padding-bottom 10px
    button
        margin-top 20px
    .fa-trash
        opacity 0.5
        cursor pointer
        position absolute
        top 0
        right 0
        font-size 1.6em
        display block
        padding 20px
        color black
        trans()
        &:hover
            color red
            opacity 0.8
    .ingredient
        display inline-block
        margin-right 10px
        font-size 1.2em
    &:hover
        shadow-level(3)
        // animation card 0.6s ease 1 forwards

@keyframes card
    0%
        transform translate3d(0, 0, 0)
    50%
        transform translate3d(0, -135px, 0)
    51%
        z-index 10
        transform translate3d(0, -135px, 0)
    100%
        z-index 10
        transform translate3d(0, 0, 0)

.questionnaire-nav
    li
        display inline
        list-style-type: none
        padding-right 20px
    li:last-child
        float right

.menu-item
    @extend .recipe

.shopping-list
    @extend .recipe
    padding 50px 5%
    list-style none
    li
        font-size 2em
        padding 20px
        border-bottom 1px solid light-grey
        border-top 1px solid light-grey
        & + li
            border-top none

.login-buttons-dropdown-align-
    #login-dropdown-list
        right 0
        left auto
        a
            color dark-blue

.meta
    opacity 0.7
    float right
    font-size 0.8em
    margin-bottom 10px
    padding-bottom 10px
